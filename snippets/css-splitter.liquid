{% case template.name %}
  {% when 'index' %}
    {% comment %}{{ 'home.css' | asset_url | stylesheet_tag }}{% endcomment %}
  {% when 'collection' %}
    {{ 'collections.css' | asset_url | stylesheet_tag: preload: true }}
  {% when 'product.mushroom-growing-kit' %}
    {{ 'pdp.css' | asset_url | stylesheet_tag: preload: true }}
  {% when 'product' %}
    {{ 'pdp.css' | asset_url | stylesheet_tag: preload: true }}
  {% when 'page' %}
  {% when 'article' %}
    {{ 'article.css' | asset_url | stylesheet_tag: preload: true }}
    {%- if template.suffix == 'author' -%}
      {{ 'author.css' | asset_url | stylesheet_tag: preload: true }} 
    {%- endif -%}
{% endcase %}
