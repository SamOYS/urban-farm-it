<div class="shopify-section index-section--flush">
  {%- style -%}
    @media screen and (max-width: 768px) {
      .background-media-text {
        background-image: url({{ image | img_url: '1x1' }});
      }
    }
  {%- endstyle -%}
  
  <div
    data-section-id="{{ index }}"
    data-section-type="background-image"
    class="background-media-text background-media-text--550 loaded"
    data-aos="background-media-text__animation"
    {% if parallax %}data-parallax="true"{% endif %}>
  
    <div class="background-media-text__container">
      {%- if parallax -%}
        <parallax-image class="parallax-container">
          <div class="parallax-image" data-movement="15%" data-parallax-image data-angle="top">
      {%- endif -%}
  
        {%- if image != blank -%}
            {% style %}
              .background-media-text__image {
                object-position: center;
              }
            {% endstyle %}
  
            {% assign classes = 'image-fit background-media-text__image' %}
            <img src="{{ image }}" alt="{{ image_alt_text }}" loading="lazy" width="2400" class="{{ classes }}">
        {%- else -%}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
  
      {%- if parallax -%}
          </div>
        </parallax-image>
      {%- endif -%}
    </div>
    {%- if heading != blank or title != blank or text != blank -%}
      <div class="background-media-text__inner">
        <div class="background-media-text__aligner background-media-text-left">
          <div class="animation-cropper">
            <div class="animation-contents">
              <div class="background-media-text__text">
                {%- if subtitle -%}
                  <p class="h5">{{ subtitle }}</p>
                {%- endif -%}
                {%- if heading != blank -%}
                  <{{ heading_type }} class="h3">{{ heading | escape }}</{{ heading_type }}>
                {%- endif -%}
                {%- if text != blank -%}
                  <div class="rte background-media-text__subtext">{{ text }}</div>
                {%- endif -%}
                {%- if button_label != blank and button_link != blank -%}
                  <a href="{{ button_link }}" class="btn">
                    {{ button_label }}
                  </a>
                {%- endif -%}
              </div>
            </div>
          </div>
        </div>
      </div>
    {%- endif -%}
  </div>
  
  <div class="background-media-text__spacer background-media-text--550"></div>
</div>

