{% comment %} How it works {% endcomment %}
<div
  class="shopify-section"
  style="padding: 5rem 0; background: {{ section.settings.background_color }}; color: #fff;"
  id="how-it-works"
>
  <div class="text-left page-width">
    <div class="theme-block">
      <h2>{{ section.settings.heading }}</h2>
      <div class="steps aos-init aos-animate" data-aos="logo__animation">
        {% for block in section.blocks %}
          <div class="step">
            <div class="step-image">
              <img class="lazyload" src="{{ block.settings.image.src | img_url: '100x' }}" loading="lazy" data-src="{{ block.settings.image.src | img_url: '400x' }}" height="175" width="258">
            </div>
            <div class="step-instructions">
              <h3>{{ block.settings.step_title }}</h3>
              <p>{{ block.settings.step_description }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<style>
    #how-it-works {
      overflow: hidden;
    }

    #how-it-works * {
      text-align: center;
    }

    #how-it-works .steps {
      display: flex;
      gap: 1rem;
    }

    #how-it-works .steps img {
      display: block;
      height: 175px;
      margin: 0 auto;
    }

    #how-it-works .step {
      width: 20%;
      text-align: center;
    }

    @media only screen and (max-width: 970px) {
      #how-it-works .steps {
        flex-wrap: wrap;
      }
      #how-it-works .step {
      width: 100%;
      }
  }
</style>

{% schema %}
{
  "name": "Oysters - How it works",
  "class": "index-section",
  "settings": [{
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "How it works"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#000"
    }],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Step Image"
        },
        {
          "type": "text",
          "id": "step_title",
          "label": "Step Title"
        },
        {
          "type": "textarea",
          "id": "step_description",
          "label": "Step Description"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Oysters - How it works",
    "settings": {}
  }]
}
{% endschema %}

