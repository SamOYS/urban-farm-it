<section
  id="LeadGenWhatToExpect"
  data-section-id="{{ section.id }}"
  data-section-type="lead-gen-wte"
  class="lead-gen__wte"
>
  <div class="container page-width">
    <h2 class="section-title">{{ section.settings.section_title | default: 'What to expect' }}</h2>
    <div class="stages">
      {% for block in section.blocks %}
        <div class="stage">
          <span class="stage-number">{{ forloop.index }}</span>
          <p class="stage-contents">{{ block.settings.stage_contents }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% style %}
  [data-section-id="{{ section.id }}"] {
      padding: 2.5rem 0 3.5rem 0;
      background: linear-gradient(#002000, #001000);
      color: #fff;
  }

  [data-section-id="{{ section.id }}"] p {
      margin: 0;
      font-size: clamp(16px, 5vw, 18px);
  }

  [data-section-id="{{ section.id }}"] .container {
      width: 100%;
  }

  [data-section-id="{{ section.id }}"] .section-title {
      width: fit-content;
      font-family: 'DM Sans' !important;
      text-transform: unset !important;
      font-size: clamp(12px, 5vw, 18px);
      font-weight: normal !important;
      letter-spacing: unset !important;
      margin-bottom: 1.5rem;
      -webkit-text-stroke: unset !important;
      position: relative;
  }

  [data-section-id="{{ section.id }}"] .section-title::after {
      content: "";
      width: 100%;
      height: 1px;
      background-color: #fff;
      position: absolute;
      right: -115%;
      top: 50%;
      transform: translateY(-50%);
  }

  [data-section-id="{{ section.id }}"] .stages {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      gap: 1.5rem;
  }

  [data-section-id="{{ section.id }}"] .stages .stage {
      display: flex;
      gap: .5rem;
      /* align-items: center; */
  }

  @media only screen and (min-width: 769px) {
      [data-section-id="{{ section.id }}"] .stages .stage {
          width: 30%;
      }
  }



  [data-section-id="{{ section.id }}"] .stages .stage .stage-number {
      font-size: clamp(30px, 5vw, 40px);
      display: flex;
      align-items: start;
      justify-content: center;
      height: 30px;
      width: 30px;
      font-weight: bold;
      /* border: 1.5px solid #fff;
      border-radius: 100%; */
      flex-shrink: 0;
    line-height: 1;
  }
{% endstyle %}
{% schema %}
{
  "name": "LG: What To Expect",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "What to expect"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Stage",
      "settings": [
        {
          "type": "textarea",
          "id": "stage_contents",
          "label": "Stage Contents",
          "default": "Description for this stage."
        }
      ]
    }
  ],
  "presets": [{
    "name": "LG: What To Expect",
    "category": "What To Expect"
  }]
}
{% endschema %}
