<section
id="LeadGenServices"
data-section-id="{{ section.id }}"
data-section-type="lead-gen-wte"
class="lead-gen__wte">
    <div class="index-content">
        <div class="container page-width" data-sal="fade">
            {% if section.settings.title %}
            <h2 class="section-title">{{ section.settings.title | default: 'Our Services' }}</h2>
            {% endif %}
            <div class="grid">
                {% for block in section.blocks %}
                <div class="grid-item">
                    {% if block.settings.title %}
                    <h3 class="item-title">{{ block.settings.title }}</h3>
                    {% endif %}
                    {% if block.settings.description %}
                    <p class="item-contents">{{ block.settings.description }}</p>
                    {% endif %}
                    {% if block.settings.link %}
                    <a href="{{ block.settings.link }}">{{ block.settings.link_text | default: 'Learn more' }}</a>
                    {% endif %}
                </div>
                {% endfor %}
            </div>
              {% if section.settings.cta != blank %}<a href="{{ section.settings.cta  }}" class="btn">Book Consultation</a>{% endif %}
        </div>
    </div>
</section>


{% style %}
    [data-section-id="{{ section.id }}"] {
        padding-bottom: 2.5rem;
    }

    [data-section-id="{{ section.id }}"] p {
        font-size: clamp(14px, 5vw, 18px);
    }

    [data-section-id="{{ section.id }}"] a:not(.btn) {
        text-decoration: underline !important;
    }

    [data-section-id="{{ section.id }}"] .grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 3rem;
        margin: 0;
    }

    @media only screen and (max-width: 678px) {
        [data-section-id="{{ section.id }}"] .grid {
            grid-template-columns: 1fr;
        }
    }

    @media only screen and (min-width: 679px) {
        [data-section-id="{{ section.id }}"] .grid {
            width: {{ section.settings.grid_desktop_width |  append: '%' }};
        }
    }

    [data-section-id="{{ section.id }}"] .grid .grid-item picture {
        display: block;
        margin-bottom: 1rem;
        overflow: hidden;
    }

    [data-section-id="{{ section.id }}"] .grid .grid-item picture,
    [data-section-id="{{ section.id }}"] .grid .grid-item picture img {
        max-height: 300px;
    }

    [data-section-id="{{ section.id }}"] .grid .grid-item picture img {
        border-radius: var(--buttonRadius);
        width: 100%;
        object-fit: cover;
    }

    [data-section-id="{{ section.id }}"] .item-title {
        font-family: 'DM Sans' !important;
        text-transform: unset !important;
        font-weight: normal !important;
        letter-spacing: unset !important;
    }

    [data-section-id="{{ section.id }}"] .section-title {
        width: fit-content;
        font-family: 'DM Sans' !important;
        text-transform: unset !important;
        font-size: clamp(30px, 5vw, 40px);
        font-weight: bold !important;
        letter-spacing: unset !important;
        margin-bottom: 1.5rem;
        -webkit-text-stroke: unset !important;
        position: relative;
    }
{% endstyle %}

{% schema %}
    {
      "name": "LG: Services",
      "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Section Title",
            "default": "Our Services"
        },
        {
            "type": "number",
            "id": "grid_desktop_width",
            "label": "Grid Width",
            "default": 70
        },
        {
            "type": "url",
            "id": "cta",
            "label": "CTA Link"        
        }
      ],
      "blocks": [
        {
          "type": "service",
          "name": "Service",
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Image",
              "info": "Recommended size: 800x600"
            },
            {
            "type": "select",
            "id": "image_position",
            "label": "Image Position",
            "options": [
                {"value": "left top", "label": "Left Top"},
                {"value": "left center", "label": "Left Center"},
                {"value": "left bottom", "label": "Left Bottom"},
                {"value": "right top", "label": "Right Top"},
                {"value": "right center", "label": "Right Center"},
                {"value": "right bottom", "label": "Right Bottom"},
                {"value": "center top", "label": "Center Top"},
                {"value": "center center", "label": "Center"},
                {"value": "center bottom", "label": "Center Bottom"}
            ],
            "default": "center center"
            },
            {
              "type": "text",
              "id": "title",
              "label": "Title",
              "default": "Service Title"
            },
            {
              "type": "textarea",
              "id": "description",
              "label": "Description",
              "default": "Service description..."
            },
            {
              "type": "url",
              "id": "link",
              "label": "Link URL"
            },
            {
              "type": "text",
              "id": "link_text",
              "label": "Link Text",
              "default": "Learn more"
            }
          ]
        }
      ],
      "presets": [{
        "name": "LG: Services",
        "category": "Service"
      }]
    }
    {% endschema %}
    
